@page
@{
    ViewData["Title"] = "Materials";
}

<h2 class="mb-4">Materials</h2>

<div class="card-dark mb-3">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <select id="lang" class="form-select">
                <option value="TR">TR</option>
                <option value="EN">EN</option>
            </select>
        </div>
        <div class="col-auto">
            <a class="btn btn-gradient" href="/Materials/Create">Material Ekle</a>
        </div>
    </div>
</div>

<div class="card-dark">
    <table class="table table-dark table-striped table-borderless align-middle mb-0">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Placement</th>
                <th>Title</th>
                <th>Order</th>
                <th>Operation</th>
            </tr>
        </thead>
        <tbody id="tbodyMaterials">
            <tr><td colspan="6">Veri yüklenmedi.</td></tr>
        </tbody>
    </table>
</div>

@section Scripts {
<script>
const apiBase = window.ETZ_API_BASE || 'http://localhost:5099';
const tbody = document.getElementById('tbodyMaterials');
const langSel = document.getElementById('lang');
langSel.addEventListener('change', load);

async function load() {
    const lang = langSel.value;
    tbody.innerHTML = '<tr><td colspan="6">Yükleniyor...</td></tr>';
    try {
        const res = await fetch(`${apiBase}/api/materials?languageCode=${lang}`);
        if (!res.ok) throw new Error('HTTP ' + res.status);
        const data = await res.json();
        if (!Array.isArray(data) || data.length === 0) {
            tbody.innerHTML = '<tr><td colspan="6">Kayıt yok.</td></tr>';
            return;
        }
        tbody.innerHTML = data.map(m => `
            <tr>
                <td>${m.materialName}</td>
                <td>${m.materialType}</td>
                <td>${m.placementCode}</td>
                <td>${m.title}</td>
                <td>${m.displayOrder}</td>
                <td>
                    <div class="d-flex gap-2">
                        <button class="btn btn-gradient" data-action="edit" data-id="${m.id}">Edit</button>
                        <button class="btn btn-danger" data-action="delete" data-id="${m.id}">Delete</button>
                    </div>
                </td>
            </tr>`).join('');
    } catch (e) {
        tbody.innerHTML = `<tr><td colspan="6">Hata: ${e.message}</td></tr>`;
    }
}

tbody.addEventListener('click', (e) => {
    const btn = e.target.closest('button[data-action]');
    if (!btn) return;
    const action = btn.getAttribute('data-action');
    const id = btn.getAttribute('data-id');
    if (action === 'edit') {
        window.location.href = `/Materials/Edit/${id}`;
        return;
    }
    if (action === 'delete') {
        if (!confirm('Silmek istediğine emin misin?')) return;
        fetch(`${apiBase}/api/materials/${id}`, { method: 'DELETE' })
            .then(r => { if (!r.ok) throw new Error('HTTP ' + r.status); return r.json().catch(() => ({})); })
            .then(() => load())
            .catch(err => alert('Silme başarısız: ' + err.message));
    }
});

load();
</script>
}
