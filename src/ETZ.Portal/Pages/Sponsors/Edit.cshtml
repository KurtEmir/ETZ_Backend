@page "{id:guid}"
@{
    ViewData["Title"] = "Sponsor Güncelle";
}

<h2 class="mb-4 text-center gradient-text">Sponsor Güncelle</h2>

<div class="row g-4">
    <div class="col-12 col-lg-7">
        <div class="card-dark">
            <h5 class="mb-3">Genel Bilgiler</h5>
            <form id="editForm" class="text-white">
                <input type="hidden" id="sponsorId" value="@RouteData.Values["id"]" />
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input class="form-control" id="name" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Logo Url</label>
                    <input class="form-control" id="logo" placeholder="https://..." required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Display Order</label>
                    <input class="form-control" id="order" type="number" value="0" />
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="card-dark">
                            <h6 class="mb-3">Türkçe</h6>
                            <label class="form-label">Type</label>
                            <input class="form-control" id="typeTr" placeholder="Ana Sponsor" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card-dark">
                            <h6 class="mb-3">English</h6>
                            <label class="form-label">Type</label>
                            <input class="form-control" id="typeEn" placeholder="Main Sponsor" />
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button class="btn btn-gradient" type="submit">Güncelle</button>
                    <a class="btn btn-secondary" asp-page="/Sponsors/Index">Vazgeç</a>
                </div>
            </form>
        </div>
    </div>

    <div class="col-12 col-lg-5">
        <div class="card-dark">
            <h5 class="mb-3">Önizleme</h5>
            <img id="preview" class="img-fluid rounded" alt="preview" />
        </div>
    </div>
</div>

@section Scripts {
<script>
const apiBase = window.ETZ_API_BASE || 'http://localhost:5099';
const id = document.getElementById('sponsorId').value;
const preview = document.getElementById('preview');

document.getElementById('logo').addEventListener('input', (e) => preview.src = e.target.value);

// TR ve EN listelerini çek -> id ile eşleştir -> formu doldur
Promise.all([
  fetch(`${apiBase}/api/sponsors?languageCode=TR`).then(r=>r.ok?r.json():[]).catch(()=>[]),
  fetch(`${apiBase}/api/sponsors?languageCode=EN`).then(r=>r.ok?r.json():[]).catch(()=>[])
]).then(([trList, enList]) => {
  const tr = Array.isArray(trList) ? trList.find(x => x.id === id) : null;
  const en = Array.isArray(enList) ? enList.find(x => x.id === id) : null;
  const base = tr || en;
  if (base) {
    document.getElementById('name').value = base.sponsorName || '';
    document.getElementById('logo').value = base.sponsorLogoUrl || '';
    document.getElementById('order').value = base.displayOrder || 0;
    preview.src = base.sponsorLogoUrl || '';
  }
  if (tr) document.getElementById('typeTr').value = tr.sponsorTypeName || '';
  if (en) document.getElementById('typeEn').value = en.sponsorTypeName || '';
});

const form = document.getElementById('editForm');
form.addEventListener('submit', async (e) => {
  e.preventDefault();
  const payload = {
    name: document.getElementById('name').value.trim(),
    sponsorLogoUrl: document.getElementById('logo').value.trim(),
    displayOrder: Number(document.getElementById('order').value || 0),
    translations: [
      { languageCode: 'TR', type: document.getElementById('typeTr').value.trim() },
      { languageCode: 'EN', type: document.getElementById('typeEn').value.trim() }
    ]
  };
  try {
    const res = await fetch(`${apiBase}/api/sponsors/${id}`, {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(payload)
    });
    if (!res.ok) throw new Error('HTTP ' + res.status);
    window.location.href = '/Sponsors/Index';
  } catch (err) {
    alert('Güncelleme başarısız: ' + err.message);
  }
});
</script>
}
